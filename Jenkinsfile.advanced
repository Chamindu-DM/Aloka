pipeline {
    agent any
    
    parameters {
        choice(name: 'DEPLOY_ENV', choices: ['dev', 'staging', 'production'], description: 'Deployment environment')
        string(name: 'VERSION_TAG', defaultValue: '', description: 'Optional: Specific version tag (e.g., v1.0.0)')
    }
    
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')
        AWS_SSH_CREDENTIALS = credentials('aws-ssh-credentials')
        DOCKERHUB_REPO = 'chamindudm'
        BACKEND_IMAGE = "${DOCKERHUB_REPO}/aloka-backend"
        FRONTEND_IMAGE = "${DOCKERHUB_REPO}/aloka-frontend"
        VERSION = "${params.VERSION_TAG ?: 'build-' + env.BUILD_NUMBER}"
        EC2_USER = 'ec2-user'
        EC2_HOST = credentials('ec2-host-ip')
        APP_DIR = '/home/ec2-user/aloka'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code...'
                checkout scm
            }
        }
        
        stage('Build Backend') {
            steps {
                echo "Building backend image for ${params.DEPLOY_ENV}..."
                script {
                    dir('backend') {
                        sh """
                            docker build -t ${BACKEND_IMAGE}:${VERSION} .
                            docker tag ${BACKEND_IMAGE}:${VERSION} ${BACKEND_IMAGE}:${params.DEPLOY_ENV}
                        """
                        if (params.DEPLOY_ENV == 'production') {
                            sh "docker tag ${BACKEND_IMAGE}:${VERSION} ${BACKEND_IMAGE}:latest"
                        }
                    }
                }
            }
        }
        
        stage('Build Frontend') {
            steps {
                echo "Building frontend image for ${params.DEPLOY_ENV}..."
                script {
                    dir('frontend') {
                        // Set API URL based on environment
                        def apiUrl = params.DEPLOY_ENV == 'production' ? "http://${EC2_HOST}:5001/api" : "http://localhost:5001/api"
                        sh """
                            docker build --build-arg VITE_API_URL=${apiUrl} -t ${FRONTEND_IMAGE}:${VERSION} .
                            docker tag ${FRONTEND_IMAGE}:${VERSION} ${FRONTEND_IMAGE}:${params.DEPLOY_ENV}
                        """
                        if (params.DEPLOY_ENV == 'production') {
                            sh "docker tag ${FRONTEND_IMAGE}:${VERSION} ${FRONTEND_IMAGE}:latest"
                        }
                    }
                }
            }
        }
        
        stage('Test Images') {
            steps {
                echo 'Running tests...'
                script {
                    sh """
                        docker run --rm ${BACKEND_IMAGE}:${VERSION} npm test || true
                        docker run --rm ${FRONTEND_IMAGE}:${VERSION} npm test || true
                    """
                }
            }
        }
        
        stage('Login to Docker Hub') {
            steps {
                echo 'Logging into Docker Hub...'
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        
        stage('Push Images') {
            when {
                expression { params.DEPLOY_ENV == 'production' || params.DEPLOY_ENV == 'staging' }
            }
            steps {
                echo 'Pushing images to Docker Hub...'
                sh """
                    docker push ${BACKEND_IMAGE}:${VERSION}
                    docker push ${BACKEND_IMAGE}:${params.DEPLOY_ENV}
                    docker push ${FRONTEND_IMAGE}:${VERSION}
                    docker push ${FRONTEND_IMAGE}:${params.DEPLOY_ENV}
                """
                script {
                    if (params.DEPLOY_ENV == 'production') {
                        sh """
                            docker push ${BACKEND_IMAGE}:latest
                            docker push ${FRONTEND_IMAGE}:latest
                        """
                    }
                }
            }
        }
        
        stage('Deploy') {
            when {
                expression { params.DEPLOY_ENV != 'dev' }
            }
            steps {
                echo "Deploying to ${params.DEPLOY_ENV} environment on AWS EC2..."
                script {
                    sshagent(['aws-ssh-credentials']) {
                        sh """
                            ssh -o StrictHostKeyChecking=no ${EC2_USER}@${EC2_HOST} << 'ENDSSH'
                                # Navigate to app directory
                                cd ${APP_DIR}
                                
                                # Pull latest images from Docker Hub
                                echo "Pulling latest Docker images..."
                                docker-compose pull
                                
                                # Stop and remove old containers
                                echo "Stopping old containers..."
                                docker-compose down
                                
                                # Start new containers
                                echo "Starting new containers..."
                                docker-compose up -d
                                
                                # Clean up unused images
                                echo "Cleaning up unused Docker images..."
                                docker system prune -f
                                
                                # Verify containers are running
                                echo "Verifying deployment..."
                                docker-compose ps
                                
                                echo "Deployment completed successfully!"
ENDSSH
                        """
                    }
                }
            }
        }
        
        stage('Cleanup') {
            steps {
                echo 'Cleaning up...'
                sh """
                    docker system prune -f
                """
            }
        }
    }
    
    post {
        always {
            script {
                node {
                    sh 'docker logout || true'
                }
            }
        }
        success {
            echo 'âœ… Pipeline completed successfully!'
            echo "Environment: ${params.DEPLOY_ENV}"
            echo "Version: ${VERSION}"
            echo "Backend: ${BACKEND_IMAGE}:${VERSION}"
            echo "Frontend: ${FRONTEND_IMAGE}:${VERSION}"
            script {
                if (params.DEPLOY_ENV != 'dev') {
                    echo "ðŸš€ Application deployed to AWS EC2: ${EC2_HOST}"
                }
            }
        }
        failure {
            echo 'âŒ Pipeline failed!'
        }
    }
}